{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                              
    "declaration": true,                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "outDir": "dist/cjs",
    "rootDir": "src",
  },
  "exclude": ["dist", "node_modules", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src"]
}
