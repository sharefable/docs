{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ESNext"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist/esm"
  },
  "include": ["src"]
}
